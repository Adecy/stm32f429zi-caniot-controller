{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "venvPath": "../.venv",
            "westPath": "../.venv/bin/west",
            "netToolsPath": "../tools/net-tools",
            "board": "nucleo_f429zi",
            "serialNumber": "303636434646343935323534373037383637323031333233"
        }
    },
    "tasks": [
        {
            "label": "Build",
            "detail": "west build --board=${board}",
            "type": "shell",
            "command": "${westPath}",
            "args": [
                "build",
                "--board=${board}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Build (w\\ ACN52840)",
            "detail": "west build --board=${board}",
            "type": "shell",
            "command": "${westPath}",
            "args": [
                "build",
                "--board=${board}",
                "--",
                "-DDTC_OVERLAY_FILE=\"nucleo_f429zi.overlay ipc_to_custom_acn52840.overlay\"",
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Flash",
            "detail": "west flash --serial ${serialNumber}",
            "type": "shell",
            "command": "${westPath}",
            "args": [
                "flash",
                "--serial",
                "${serialNumber}",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "detail": "rm -rf ${workspaceFolder}/build",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/build",
            "group": "build",
            "args": [],
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "echo": false,
            },
            "problemMatcher": []
        },
        {
            "label": "debugserver",
            "detail": "west debugserver",
            "type": "shell",
        	"command": "${westPath}",
            "group": "build",
            "args": [
                "debugserver"
            ],
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Readelf",
            "type": "shell",
            "command": "arm-none-eabi-readelf -a ${workspaceFolder}/build/zephyr/zephyr.elf > readelf.txt",
            "presentation": {
                "echo": false,
            },
            "problemMatcher": []
        },
        {
            "label": "Disassembly",
            "type": "shell",
            "command": "arm-none-eabi-objdump -S ${workspaceFolder}/build/zephyr/zephyr.elf > disassembly.S",
            "presentation": {
                "echo": false,
            },
            "problemMatcher": []
        },
        {
            "label": "Activate Python venv",
            "type": "shell",
            "command": "source ${venvPath}/bin/activate && sh",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false,
                "focus": true,
                "echo": true
            },
            "problemMatcher": []
        }
    ]
}